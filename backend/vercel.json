{
  "version": 2,
  "headers": [
    {
      "source": "/auth/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "http://localhost:1234" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ],
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    }
  ]
}
